<div class="col-12 col-md-6 mb-5 card-group">
  <div class="card border-none text-secondary mt-2">
    <div class="card-body border-none p-2 mx-3">
      <div class="card-title border-bottom border-2 border-primary pb-3 brand-font">
        <h3>{{ card.subcat_title }}</h3>
      </div>
      <div class="card-text">
        <p>{{ card.subcat_description }}</p>
        <!-- sub-category bullets of notable items -->
        {% if card.subcat_bullets %}
        <ul>
          {% for bullet in card.subcat_bullets %}
          <li>{{ bullet }}</li>
          {% endfor %}
        </ul>
        {% endif %}
      </div>
    </div>
    <!-- Sub-category carousel -->
    <div>
      {% include "subcat_card_carousel.njk" %}
    </div>
  </div>
</div>