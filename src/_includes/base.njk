  <body>
    
    {% include "header.njk" %}

    <!-- <main> margin offset calculated dymanically in script.js -->
    <main class="">
      {{ content | safe }}
    </main>
      
    {% include "footer.njk" %}

    {% if sidebar_vertical_btn %}
      {% include "sidebar_vertical_btn.njk" %}
    {% endif %}

    {% include "sidebar.njk" %}

